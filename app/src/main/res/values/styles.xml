<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/material_blue_dark</item>
        <item name="colorPrimaryDark">@color/material_blue</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorWhite</item>
    </style>

    <!-- Splash Theme -->
    <style name="splashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_image</item>
        <item name="android:statusBarColor">@color/colorWhite</item>
    </style>


    <!-- ToolBarStyle -->
    <style name="toolBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:background">@color/material_blue</item>
    </style>

    <!-- RecyclerContainer -->
    <style name="rv_container">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:padding">@dimen/padding_main</item>
    </style>

    <!-- TextViewStyles -->
    <style name="rv_item_name_textView_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="rv_item_phone_textView_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:textColor">@color/eliteColorLight</item>
        <item name="android:textStyle">italic</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <!-- checkboxStyle -->
    <style name="checkbox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/margin_small</item>
        <item name="android:elevation">@dimen/margin_main</item>
        <item name="android:layout_margin">@dimen/margin_main</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:background">@drawable/custom_checkbox</item>
        <item name="android:button">@android:color/transparent</item>
    </style>

    <!-- ButtonStyle -->
    <style name="button_blue_save">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_10</item>
        <item name="android:background">@drawable/custom_button_save_enabled</item>
        <item name="android:elevation">@dimen/margin_main</item>
        <item name="android:text">@string/menu_save</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="button_QR">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:src">@drawable/qr_selector</item>
        <item name="android:background">@color/colorGreyLight</item>
        <item name="android:elevation">0dp</item>
    </style>


    <!-- TextViewStyle -->
    <style name="textView_large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/et_height</item>
        <item name="android:layout_margin">@dimen/margin_main</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:gravity">center</item>
    </style>


</resources>